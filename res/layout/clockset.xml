<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
android:background="#99ddff" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="300px" android:id="@+id/linearClockset" android:orientation="vertical">
    <View android:layout_height="2dip" android:layout_width="fill_parent" android:background="#CCC"/>
    <LinearLayout android:id="@+id/linearLayout32" android:layout_width="match_parent" android:layout_height="wrap_content">
        
        <EditText android:inputType="number" android:maxLength="4" android:layout_width="110px" android:layout_height="wrap_content" android:gravity="right" android:minLines="1" android:maxLines="1" android:maxWidth="110px" android:selectAllOnFocus="true" android:layout_weight="1" android:id="@+id/txtYear"></EditText>
        <TextView android:id="@+id/textView43" android:layout_height="fill_parent" android:textColor="#000" android:gravity="left|center_vertical" android:text="年" android:layout_width="40px"></TextView>
        
        <EditText android:inputType="number" android:maxLength="2" android:layout_width="110px" android:layout_height="wrap_content" android:gravity="right" android:id="@+id/txtMonth" android:minLines="1" android:maxLines="1" android:maxWidth="110px" android:selectAllOnFocus="true" android:layout_weight="1"></EditText>
        <TextView android:id="@+id/textView44" android:layout_height="fill_parent" android:textColor="#000" android:gravity="left|center_vertical" android:layout_width="40px" android:text="月"></TextView>
        
        <EditText android:inputType="number" android:maxLength="2" android:layout_width="110px" android:layout_height="wrap_content" android:gravity="right" android:id="@+id/txtDay" android:minLines="1" android:maxLines="1" android:maxWidth="110px" android:selectAllOnFocus="true" android:layout_weight="1"></EditText>
        <TextView android:id="@+id/textView45" android:layout_height="fill_parent" android:textColor="#000" android:gravity="left|center_vertical" android:text="日" android:layout_width="40px"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
		
        <EditText android:inputType="number" android:maxLength="2" android:layout_width="110px" android:id="@+id/txtHour" android:layout_height="wrap_content" android:gravity="right" android:minLines="1" android:maxLines="1" android:maxWidth="110px" android:selectAllOnFocus="true" android:layout_weight="1"></EditText>
        <TextView android:layout_height="fill_parent" android:textColor="#000" android:gravity="left|center_vertical" android:layout_width="40px" android:text="时"></TextView>
        
        <EditText android:inputType="number" android:maxLength="2" android:layout_width="110px" android:layout_height="wrap_content" android:gravity="right" android:id="@+id/txtMinute" android:minLines="1" android:maxLines="1" android:maxWidth="110px" android:selectAllOnFocus="true" android:layout_weight="1"></EditText>
        <TextView android:id="@+id/txtMinute1" android:layout_height="fill_parent" android:textColor="#000" android:gravity="left|center_vertical" android:layout_width="40px" android:text="分"></TextView>
        
        <EditText android:inputType="number" android:maxLength="2" android:layout_width="110px" android:layout_height="wrap_content" android:gravity="right" android:id="@+id/txtSecond" android:minLines="1" android:maxLines="1" android:maxWidth="110px" android:selectAllOnFocus="true" android:layout_weight="1"></EditText>
        <TextView android:id="@+id/txtSecond1" android:layout_height="fill_parent" android:textColor="#000" android:gravity="left|center_vertical" android:text="秒" android:layout_width="40px"></TextView>
    </LinearLayout>
    <View android:layout_height="2dip" android:layout_width="fill_parent" android:background="#CCC"/>
</LinearLayout>