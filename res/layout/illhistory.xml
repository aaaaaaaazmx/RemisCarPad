<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
android:background="#99ddff" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/linearIllHistory" android:orientation="vertical" android:layout_height="260px">
	<View android:layout_height="2dip" android:layout_width="fill_parent" android:background="#CCC"/>
	<LinearLayout  
	android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="260px">

	    <TextView android:id="@+id/textView9" android:layout_alignParentLeft="true" android:layout_height="fill_parent" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:textColor="#000" android:layout_width="30px" android:text="病　　史" android:lines="4" android:textSize="18px" android:gravity="center"></TextView>
	    <View android:id="@+id/view1" android:layout_height="wrap_content" android:layout_width="2dip" android:background="#ccc"></View>
	    <LinearLayout android:id="@+id/linearLayout10" android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="fill_horizontal" android:orientation="vertical">
	        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout11">
	            <TextView android:id="@+id/textView10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="主　诉:" android:textColor="#000"></TextView>
	            <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/txtChiefComplaint"></EditText>
	        </LinearLayout>
	        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout12">
	            <TextView android:id="@+id/textView11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="现病史:" android:layout_gravity="top" android:gravity="top" android:textColor="#000"></TextView>
	            <EditText android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="160px" android:gravity="top|left" android:id="@+id/txtPresentHistory"></EditText>
	        </LinearLayout>
	        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout13">
	            <TextView android:id="@+id/textView12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="过去史:" android:textColor="#000"></TextView>
	            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/txtPastHistory"></EditText>
	            <TextView android:id="@+id/textView13" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="药物过敏史:" android:textColor="#000"></TextView>
	            <Spinner android:layout_height="wrap_content" android:id="@+id/spinAllergyHistory" android:entries="@array/allergyHistories" android:layout_width="150px"></Spinner>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    <View android:layout_height="2dip" android:layout_width="fill_parent" android:background="#CCC"/>
</LinearLayout>